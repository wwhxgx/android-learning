<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher"
    >

    <TextView
        android:id="@+id/textview_relative_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/text1"
        ></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttion_relative_1"
        android:layout_below="@id/textview_relative_1"
        android:layout_alignRight="@id/textview_relative_1"
        android:text="@string/text2"
        ></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text3"
        android:id="@+id/buttion_relative_2"
        android:layout_below="@id/textview_relative_1"
        android:layout_toRightOf="@id/buttion_relative_1"
        ></Button>

</RelativeLayout>